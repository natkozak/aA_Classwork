<% if type == 'new' %>
    <% action_url = cats_url %>
    <% button_text = "Create Cat!" %>
<% else %>
    <% action_url = cat_url(cat) %>
    <% button_text = "Edit Cat!" %>
<% end %>

<form action="<%= action_url %>" method = "Post">
   <% if type == 'edit' %>
        <input type="hidden" name="_method" value="PATCH">
   <% end %>

   <label> Name:
        <input type="text" name= "cat[name]" value= "<%= cat.name %>" >
   
   </label>
   <br>
   <label> Birth_date:
        <input type="date" name= "cat[birth_date]" value= "<%= cat.birth_date %>">
   
   </label>
    <br>
   <label> Color:
        <select name= "cat[color]">
            <option disabled <%= cat.color ? "" : "selected" %> ></option>
            <option value="Black" <%= cat.color == "Black" ? "selected" : "" %> >Black</option>
            <option value="White" <%= cat.color == "White" ? "selected" : "" %> >White</option>
            <option value="Brown" <%= cat.color == "Brown" ? "selected" : "" %> >Brown</option>
            <option value="Orange" <%= cat.color == "Orange" ? "selected" : "" %> >Orange</option>
        </select>
   </label>
   <br>
    <label> Male:
        <input type="radio" name="cat[sex]" value= "<%= cat.sex %>"
            <%= cat.sex == 'M' ? "checked" : "" %>
        >
    </label>
    <label> Female:
        <input type="radio" name="cat[sex]" value= "<%= cat.sex %>"
         <%= cat.sex == 'F' ? "checked" : "" %>
        >
    </label>
    <br>
   <label> Description:
   <br>
        <textarea name= "cat[description]"> <%= cat.description %>
        </textarea>
   </label>
   <br>
    <input type="submit" value="<%=button_text%>">

</form>