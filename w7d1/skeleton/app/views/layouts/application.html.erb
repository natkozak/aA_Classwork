<!DOCTYPE html>
<html>


  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
    <%if logged_in?%>
      <div> <%= user.user_name %></div>
      <input type="submit">
    <% else %>
      <a href=" <%= new_user_url %>">Sign Up</a>
      <a href=" <%= new_session_url%>">Sign In</a>
    <% end %>
    

  </header>
    <%= yield %>
  </body>
</html>
